<% const content = (function(){ %>
  <div class="flex-between">
    <h2>Firearms</h2>
    <a class="btn" href="/firearms/new">Add Firearm</a>
  </div>

  <% if (!items.length) { %>
    <p>No firearms yet. Click "Add Firearm" to create one.</p>
  <% } else { %>
    <%
      // Helper function to generate sort URL
      function sortUrl(column) {
        const newDir = (sortBy === column && sortDir === 'asc') ? 'desc' : 'asc';
        return `/firearms?sort=${column}&dir=${newDir}`;
      }
      
      // Helper function to get sort indicator
      function sortIndicator(column) {
        if (sortBy !== column) return ' ↕';
        return sortDir === 'asc' ? ' ↑' : ' ↓';
      }
    %>
    <table class="table">
      <thead>
        <tr>
          <th><a href="<%= sortUrl('make') %>" class="sort-link">Make<%= sortIndicator('make') %></a></th>
          <th><a href="<%= sortUrl('model') %>" class="sort-link">Model<%= sortIndicator('model') %></a></th>
          <th><a href="<%= sortUrl('caliber') %>" class="sort-link">Caliber<%= sortIndicator('caliber') %></a></th>
          <th><a href="<%= sortUrl('serial') %>" class="sort-link">Serial<%= sortIndicator('serial') %></a></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.make %></td>
          <td><%= i.model %></td>
          <td><%= i.caliber || '' %></td>
          <td><%= i.serial || '' %></td>
          <td class="text-right"><a class="btn btn-secondary" href="/firearms/<%= i.id %>">View</a></td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>
<% })(); %>
<%- include('../partials/layout', { body: content }) %>

