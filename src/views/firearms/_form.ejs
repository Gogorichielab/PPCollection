<div>
  <label>Make
    <input name="make" required value="<%= item.make || '' %>">
  </label>
</div>
<div>
  <label>Model
    <input name="model" required value="<%= item.model || '' %>">
  </label>
</div>
<div>
  <label>Serial
    <input name="serial" value="<%= item.serial || '' %>">
  </label>
</div>
<div>
  <label>Caliber
    <input name="caliber" value="<%= item.caliber || '' %>">
  </label>
</div>
<div>
  <label>Type
    <input name="type" value="<%= item.type || '' %>">
  </label>
</div>
<div>
  <label>Purchase Date
    <input type="date" name="purchase_date" value="<%= item.purchase_date || '' %>">
  </label>
</div>
<div>
  <label>Purchase Price
    <input type="number" step="0.01" name="purchase_price" value="<%= item.purchase_price ?? '' %>">
  </label>
</div>
<div>
  <label>Purchase Location
    <input name="purchase_location" value="<%= item.purchase_location || '' %>">
  </label>
</div>
<div>
  <label>Condition
    <input name="condition" value="<%= item.condition || '' %>">
  </label>
</div>
<div>
  <label>Status
    <input name="status" value="<%= item.status || '' %>">
  </label>
</div>
<div class="col-span-2">
  <label>Notes
    <textarea name="notes" rows="4"><%= item.notes || '' %></textarea>
  </label>
</div>

<div class="col-span-2">
  <h3 style="margin-top: 1rem; margin-bottom: 0.5rem; font-weight: bold;">Sold Information</h3>
</div>
<div>
  <label>Buyer Name
    <input name="buyer_name" value="<%= item.buyer_name || '' %>">
  </label>
</div>
<div>
  <label>Buyer Address
    <input name="buyer_address" value="<%= item.buyer_address || '' %>">
  </label>
</div>
<div>
  <label>Sold Date
    <input type="date" name="sold_date" value="<%= item.sold_date || '' %>">
  </label>
</div>

