<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof pageTitle !== 'undefined' && pageTitle ? pageTitle : 'Pew Pew Collection' %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
  <header class="topbar">
    <div class="topbar-container">
      <h1 class="topbar-title"><a href="/">Pew Pew Collection</a></h1>
      <% if (user) { 
           function sanitizeSearch(str) { return str.replace(/[^a-zA-Z0-9 \-_]/g, ''); }
           var exportUrl = "/library/export";
           if (typeof search !== "undefined" && search && search.trim()) {
             exportUrl += "?search=" + encodeURIComponent(sanitizeSearch(search));
           }
      %>
      <nav class="navbar">
        <a href="/library" class="nav-link">Library</a>
        <a href="<%= exportUrl %>" class="nav-link"><i class="bi bi-download"></i> Export</a>
        <a href="/profile" class="nav-link">Profile</a>
        <form method="post" action="/logout" class="nav-logout">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="nav-link nav-logout-btn" type="submit">Logout</button>
        </form>
      </nav>
      <div class="search-container">
        <form method="get" action="/library" class="search-form">
          <input type="search" name="search" placeholder="Search your collection..." class="search-input" value="<%= typeof search !== 'undefined' ? search : '' %>">
          <button type="submit" class="btn btn-search">Search</button>
        </form>
      </div>
      <% } else { %>
      <a class="btn btn-secondary" href="/login">Login</a>
      <% } %>
    </div>
  </header>
  <main class="container">
