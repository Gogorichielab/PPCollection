<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pew Pew Collection</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
  <header class="topbar">
    <div class="topbar-container">
      <h1 class="topbar-title"><a href="/">Pew Pew Collection</a></h1>
      <% if (user) { %>
      <nav class="navbar">
        <a href="/library" class="nav-link">Library</a>
        <a href="/library/export" class="nav-link" download>Export</a>
        <a href="/profile" class="nav-link">Profile</a>
        <form method="post" action="/logout" class="nav-logout">
          <button class="nav-link nav-logout-btn" type="submit">Logout</button>
        </form>
      </nav>
      <div class="search-container">
        <form method="get" action="/library" class="search-form">
          <input type="search" name="search" placeholder="Search your collection..." class="search-input" value="<%= typeof search !== 'undefined' ? search : '' %>">
          <button type="submit" class="btn btn-search">Search</button>
        </form>
      </div>
      <% } else { %>
      <a class="btn btn-secondary" href="/login">Login</a>
      <% } %>
    </div>
  </header>
  <main class="container">
    <%- body %>
  </main>
  <footer class="footer container">
    <small>Made in Illinois, USA By <a href="https://github.com/gogorichie">Gogorichie</a></small>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (window.flatpickr) {
        window.flatpickr('.js-date-picker', {
          dateFormat: 'Y-m-d',
        });
      }
    });
  </script>
</body>
</html>

