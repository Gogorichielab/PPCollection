<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pew Pew Collection</title>
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
  <% const isInventory = currentPath && currentPath.startsWith('/firearms') && !currentPath.startsWith('/firearms/new'); %>
  <% const isAddFirearm = currentPath === '/firearms/new'; %>
  <header class="topbar">
    <div class="container">
      <div class="brand-group">
        <h1><a href="/">Pew Pew Collection</a></h1>
        <nav class="primary-nav" aria-label="Primary">
          <a
            class="nav-link <%= isInventory ? 'active' : '' %>"
            href="/firearms"
            <%= isInventory ? 'aria-current="page"' : '' %>
          >Inventory</a>
          <a
            class="nav-link <%= isAddFirearm ? 'active' : '' %>"
            href="/firearms/new"
            <%= isAddFirearm ? 'aria-current="page"' : '' %>
          >Add Firearm</a>
          <a
            class="nav-link"
            href="https://github.com/Gogorichielab/PPCollection/issues"
            target="_blank"
            rel="noopener noreferrer"
          >Report Issue</a>
        </nav>
      </div>
      <div class="header-controls">
        <button id="theme-toggle" class="btn btn-secondary" title="Toggle theme">
          <span class="theme-icon">☀️</span>
        </button>
        <% if (user) { %>
        <form method="post" action="/logout">
          <button class="btn btn-secondary" type="submit">Logout (<%= user.username %>)</button>
        </form>
        <% } %>
      </div>
    </div>
  </header>
  <main class="container">
    <%- body %>
  </main>
  <aside class="version-indicator" aria-live="polite">
    <a
      class="version-indicator-icon <%= versionInfo.updateAvailable ? 'update-available' : '' %>"
      href="https://github.com/Gogorichielab/PPCollection/releases/latest"
      target="_blank"
      rel="noopener noreferrer"
      title="View latest release"
      aria-label="View latest release"
    >
      ↻
    </a>
    <% if (versionInfo.updateAvailable) { %>
    <a
      class="version-indicator-text update-available"
      href="https://github.com/Gogorichielab/PPCollection/releases/latest"
      target="_blank"
      rel="noopener noreferrer"
    >
      v<%= versionInfo.currentVersion %> → v<%= versionInfo.latestVersion %> available
    </a>
    <% } else { %>
    <span class="version-indicator-text">v<%= versionInfo.currentVersion %></span>
    <% } %>
  </aside>
  <script src="/static/js/theme.js"></script>
</body>
</html>

