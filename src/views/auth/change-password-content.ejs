<div class="login-container">
  <div class="card login-card">
    <div class="flex-between">
      <h3 class="card-title">Change Password</h3>
      <small class="page-subtitle">Required for security</small>
    </div>
    <p class="security-message">For your security, please change your password before continuing. Your new password must be at least 12 characters long.</p>
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>
    <form method="post" action="/change-password" class="form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label>
        Current Password
        <input type="password" name="current_password" required>
      </label>
      <label>
        New Password (minimum 12 characters)
        <input type="password" name="new_password" required minlength="12">
      </label>
      <label>
        Confirm New Password
        <input type="password" name="confirm_password" required minlength="12">
      </label>
      <div class="form-actions">
        <button class="btn" type="submit">Change Password</button>
      </div>
    </form>
  </div>
</div>
