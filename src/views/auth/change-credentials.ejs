<%- include('../partials/layout-header') %>
<h2>Change Your Credentials</h2>
<p style="margin-bottom: 1.5rem;">
  <strong>Welcome!</strong> For security reasons, you must change your default username and password before continuing.
</p>
<% if (error) { %>
  <div class="alert alert-error"><%- error %></div>
<% } %>
<form method="post" action="/change-credentials" class="form">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <label>
    New Username
    <input type="text" name="username" value="<%= values.username || '' %>" required>
  </label>
  <label>
    New Password (minimum 8 characters)
    <input type="password" name="password" required minlength="8">
  </label>
  <label>
    Confirm New Password
    <input type="password" name="confirm_password" required minlength="8">
  </label>
  <button class="btn" type="submit">Update Credentials</button>
</form>
<%- include('../partials/layout-footer') %>
